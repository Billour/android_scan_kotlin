<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".packing_scan_main">

    <ImageView
        android:id="@+id/write_delete_I_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/write_delete_T_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/write_delete_I_img"
        android:background="@color/lavenderblush"
        android:paddingStart="10dp"
        android:text="@string/write_delete_t_title"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_toRightOf="@+id/write_delete_I_img"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/write_delete_T_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/write_delete_T_title"
        android:layout_marginTop="10dp"
        android:background="@color/honeydew"
        android:paddingStart="10dp"
        android:text="@string/write_delete_t_message"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/write_delete_cancle_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/write_delete_check_B_btn"
        android:layout_alignBottom="@+id/write_delete_check_B_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/lightcoral"
        android:onClick="write_delete_cancle"
        android:text="@string/write_delete_cancle_b_btn"
        android:textSize="26sp" />

    <Button
        android:id="@+id/write_delete_check_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/write_delete_T_message"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/write_delete_I_img"
        android:layout_toRightOf="@+id/write_delete_I_img"
        android:background="@color/cornflowerblue"
        android:onClick="write_delete_check"
        android:text="@string/write_delete_check_b_btn"
        android:textSize="26sp" />

</RelativeLayout>