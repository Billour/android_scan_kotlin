<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Elec_com_login">

    <ImageView
        android:id="@+id/lang_I_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/lang_T_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lang_I_logo"
        android:background="@color/lavenderblush"
        android:paddingStart="10dp"
        android:text="@string/lang_t_title"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_toRightOf="@+id/lang_I_logo"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/lang_TW_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lang_T_title"
        android:layout_marginTop="15dp"
        android:background="@color/paleturquoise"
        android:onClick="TWbtn"
        android:text="@string/lang_TW_b_btn"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/lang_CN_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lang_TW_B_btn"
        android:layout_marginTop="15dp"
        android:background="@color/paleturquoise"
        android:onClick="CNbtn"
        android:text="@string/lang_CN_b_btn"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_alignParentLeft="true" />

</RelativeLayout>