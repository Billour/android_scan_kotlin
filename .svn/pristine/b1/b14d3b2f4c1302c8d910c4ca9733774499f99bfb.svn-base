<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Elec_com_login">

    <ImageView
        android:id="@+id/update_I_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/update_T_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/update_I_img"
        android:background="@color/lavenderblush"
        android:paddingStart="10dp"
        android:text="@string/update_t_title"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/update_T_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_T_title"
        android:layout_marginTop="10dp"
        android:background="@color/honeydew"
        android:paddingStart="10dp"
        android:text="@string/update_t_message"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <ScrollView
        android:id="@+id/scroll_S_msg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/update_T_message"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/honeydew"
            android:orientation="vertical">

            <TextView
                android:id="@+id/update_T_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/snow"
                android:paddingStart="10dp"
                android:text="TextView"
                android:textColor="@color/dimgray"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/updateok_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scroll_S_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/green"
        android:onClick="update_okbtn"
        android:text="@string/updateok_B_btn"
        android:textColor="@color/white"
        android:textSize="26sp" />

</RelativeLayout>