<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Elec_com_login">

    <ImageView
        android:id="@+id/text_I_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_T_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_I_logo"
        android:background="@color/lavenderblush"
        android:paddingStart="10dp"
        android:text="@string/text_t_title"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_T_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_small_B_btn"
        android:layout_below="@+id/text_T_title"
        android:layout_marginTop="10dp"
        android:background="@color/honeydew"
        android:paddingStart="10dp"
        android:text="@string/text_t_message"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/text_small_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_T_message"
        android:layout_marginTop="10dp"
        android:background="@color/lightcyan"
        android:onClick="smallbtn"
        android:text="@string/text_small_b_btn"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <Button
        android:id="@+id/text_middle_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_small_B_btn"
        android:layout_alignBottom="@+id/text_small_B_btn"
        android:layout_centerHorizontal="true"
        android:background="@color/lightcyan"
        android:onClick="middlebtn"
        android:text="@string/text_middle_b_btn"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <Button
        android:id="@+id/text_large_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_middle_B_btn"
        android:layout_alignBottom="@+id/text_middle_B_btn"
        android:layout_alignEnd="@+id/text_T_title"
        android:background="@color/lightcyan"
        android:onClick="largebtn"
        android:text="@string/text_large_b_btn"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/text_T_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_small_B_btn"
        android:layout_below="@+id/text_small_B_btn"
        android:layout_marginTop="10dp"
        android:background="@color/cornsilk"
        android:paddingStart="10dp"
        android:text="@string/text_t_set"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/text_cancle_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_check_B_btn"
        android:layout_alignBottom="@+id/text_check_B_btn"
        android:layout_toEndOf="@+id/text_I_logo"
        android:background="@color/lightcoral"
        android:onClick="canclebtn"
        android:text="@string/text_cancle_b_btn"
        android:textSize="26sp" />

    <Button
        android:id="@+id/text_check_B_btn"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/text_T_set"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/cornflowerblue"
        android:onClick="checkbtn"
        android:text="@string/text_check_b_btn"
        android:textSize="26sp" />

</RelativeLayout>