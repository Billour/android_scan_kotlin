<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/elec_com_login_R_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/honeydew"
    tools:context="com.repongroup.electroplating_commission.Elec_com_login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/elec_com_login_S_site"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_slogan"
        tools:ignore="ContentDescription" />

    <Spinner
        android:id="@+id/elec_com_login_S_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/elec_com_login_S_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elec_com_login_S_site"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/elec_com_login_B_login"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/elec_com_login_S_kind"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/newgreen"
        android:onClick="loginbtn"
        android:padding="5dp"
        android:text="@string/elec_com_login_b_login"
        android:textAlignment="center"
        android:textColor="@color/newblue"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/elec_com_login_T_checkapk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/papayawhip"
        android:text="@string/elec_com_login_t_checkapk"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:visibility="gone"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
