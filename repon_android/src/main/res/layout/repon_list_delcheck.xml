<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mistyrose"
    android:padding="10dp">

    <ImageView
        android:id="@+id/repon_list_delcheck_I_img"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/lavenderblush"
        android:src="@drawable/logo_38" />

    <TextView
        android:id="@+id/repon_list_delcheck_T_title"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/repon_list_delcheck_I_img"
        android:layout_toRightOf="@+id/repon_list_delcheck_I_img"
        android:background="@color/lavenderblush"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="@string/repon_list_delcheck_t_title"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/repon_list_delcheck_T_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repon_list_delcheck_T_title"
        android:layout_marginTop="10dp"
        android:background="@color/lavenderblush"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="@string/repon_list_delcheck_t_msg"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/repon_list_delcheck_B_cancel"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/repon_list_delcheck_B_yes"
        android:layout_alignBottom="@+id/repon_list_delcheck_B_yes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/palevioletred"
        android:onClick="delcancelbtn"
        android:text="@string/repon_list_quit_b_cancel"
        android:textSize="26sp" />

    <Button
        android:id="@+id/repon_list_delcheck_B_yes"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repon_list_delcheck_T_msg"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/darkseagreen"
        android:onClick="delyesbtn"
        android:text="@string/repon_list_quit_b_yes"
        android:textSize="26sp"
        tools:ignore="RtlCompat" />
</RelativeLayout>